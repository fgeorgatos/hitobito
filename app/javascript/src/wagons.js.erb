// Import all JavaScript files of the wagons (they can provide a
// app/javascript/src/wagon.js.coffee file to be included in the
// bundle).
<% Wagons.all.each do |wagon| %>
<% wagon_script = File.join(wagon.paths.path.to_s, 'app', 'javascript', 'src', 'wagon.js.coffee') %>
<% if File.exists?(wagon_script) %>
import '<%= wagon_script %>';
  <% end %>
<% end %>
